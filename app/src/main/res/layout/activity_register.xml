<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".Register">

    <ImageView
        android:id="@+id/reg"
        android:layout_width="25dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/arrowback" />

    <TextView
        android:id="@+id/txtreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/worksans"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/nameerr_reg"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/txtreg"
        android:paddingLeft="70dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/red" />

    <EditText
        android:id="@+id/Name_reg"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/nameerr_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/roundbtnwhite"
        android:defaultFocusHighlightEnabled="true"
        android:hint="Name"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/emailerr_reg"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/Name_reg"
        android:paddingLeft="70dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/red"
        />
    <EditText
        android:id="@+id/Email_reg"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/emailerr_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/roundbtnwhite"
        android:defaultFocusHighlightEnabled="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/passerr_reg"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/Email_reg"
        android:paddingLeft="70dp"
        android:layout_marginTop="10dp"

        android:textColor="@color/red"
        />
    <EditText
        android:id="@+id/Password_reg"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/passerr_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/roundbtnwhite"
        android:defaultFocusHighlightEnabled="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="13dp" />

    <Button
        android:id="@+id/RegisterBtn_reg"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Register"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_btn"
        android:textColor="@color/white"
        android:fontFamily="@font/worksans"
        android:textSize="40px"
        android:layout_below="@+id/Password_reg"
        android:layout_centerHorizontal="true"

        />



</RelativeLayout>